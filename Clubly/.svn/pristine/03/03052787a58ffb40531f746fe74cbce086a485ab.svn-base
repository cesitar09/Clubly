using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using Datos;

namespace Negocio
{
    public class Parametros
    {
        public static Entities context()
        {
            return Context.context();
        }

        public static Exception insertar(Datos.Parametros parametro)
        {
            try
            {
                parametro.estado = 2; //Parametro vigente.
                context().Parametros.AddObject(parametro);
                context().SaveChanges();
            }
            catch (Exception ex)
            {
                return ex;
            }
            return null;
        }

        public static Exception deshabilitar(Datos.Parametros parametro)
        {
            try
            {
                parametro.estado = 1; //Parametro no vigente.
                context().Parametros.ApplyCurrentValues(parametro);
                context().SaveChanges();
            }
            catch (Exception ex)
            {
                return ex;
            }
            return null;
        }

        public static IEnumerable<Datos.Parametros> seleccionarTodo()
        {
            try
            {
                IEnumerable<Datos.Parametros> listaParametros = context().Parametros.Where(p => p.estado > 0);
                return listaParametros;
            }
            catch (Exception)
            {
                return null;
            }
        }      
        public static Datos.Parametros SeleccionarParametros()
        {
            return Context.context().Parametros.First(p=>p.estado!=0 && p.fechaFinal==null);
        }


    }
}
