@{
    ViewBag.Title = "ConsultarHistorialPagosParaEmpleado";
}

<h1>Consultar Historial de Pagos</h1>
<fieldset>
    <form id= "Form1">
    <div id="botones"><input type="button" value= "Pagar"  id="pagar" onclick="Javascript:RegistrarPago()" class="button right"/></div>
</form>
</fieldset>
<div id="kendotable">
@(Html.Kendo().Grid<Web.Models.Pago>()
    .Name("tablaPagos") 
    .Columns(columns =>
    {
        columns.Bound(p => p.idfamilia).Width(110).Sortable(true);
        columns.Bound(p => p.conceptoDePago.descripcion);
        columns.Bound(p => p.fechaRegistro).Width(130).Format("{0:dd/MM/yyyy}");
        columns.Bound(p => p.fechaLimite).Format("{0:dd/MM/yyyy}");
        columns.Bound(p => p.monto).Width(80).Sortable(true);
        columns.Bound(p => p.estado).Width(90).Sortable(true);
        columns.Bound(p => p.id).Title("").ClientTemplate("# if ((estado == 'Pendiente') || (estado == 'Vencido')) { #" + 
            "<input type=\"checkbox\" \\#= checkquery(id) ? 'checked' :'' \\# class='chkbx5' />" +
                "# } #").Width(30); 
        //if(Model.precio != 0)
          //      {
            //        columns.Bound(p=>p.precio);
             //   }
        
    
        //RECUERDAAAA!! Aca falta hacer el codigo de lo que debe hacer cuando de click en Pagar
        //o sea cambiar la funcion "Registrar" en este caso
        //columns.Command(c => c.Custom("Pagar").Click("Registrar"));
                 
    })
    .Selectable()
    .Pageable()
    .Scrollable()
    .Filterable(filterable => filterable
                              .Extra(false)
                              .Operators(operators => operators
                                                      .ForString(str => str.Clear()
                                                                           .StartsWith("Empezar con")
                                                                           .IsEqualTo("Es igual a")
                                                                           .IsNotEqualTo("Diferente a"))
                                                      .ForNumber(number => number.Clear()
                                                                                 .IsGreaterThan("Es mayor a")
                                                                                 .IsLessThan("Es menor a")
                                                                                 .IsEqualTo("Es igual a")
                                                                                 .IsNotEqualTo("Es diferente a"))
                                                      )
                )
                .DataSource(datasource => datasource
                                          .Ajax()
                                                  .PageSize(6)
                                                  .Read(read => read.Action("LeerPagosDisponibles", "Finanzas"))
                           )
                           
    )
     
 </div>


<script type="text/javascript">
    function RegistrarPago() {
        e.preventDefault();
        var grid = $('#tablaPagos').data('kendoGrid');
        grid.tbody
             .find(":checked")
             .closest("tr")
              .each(function () {
                  models.push(grid.dataItem(this).id);
              });
              var id = document.getElementById("id").value;
              var descripcion = document.getElementById("descripcion").value;
              var monto = document.getElementById("monto").value;
               $.ajax({
                        url: '@Url.Action("GuardarPerfil")',
                        type: 'POST',
                        datatype: "json",
                        traditional: true,
                        data: {
                            permisos: JSON.stringify(models),
                            strid: JSON.stringify(id),
                            strnombre: JSON.stringify(descripcion),
                            strdescripcion: JSON.stringify(monto)
                        },
                        error: function (event, request, settings) {
                            models = [];
                            window.alert("Ocurrió un error en su transacción");
                        },
               });
    }
//        var row = grid.select();
//        var dataItem = grid.dataItem(row);
//        var id = dataItem.id;
        //        location = "@Url.Action("RealizarPago")" + "?id=" + id;
    }
  </script>

