@model Web.Models.Asistencia

@{
    ViewBag.Title = "ReporteAsistencia";
}

<h2>ReporteAsistencia</h2>

<fieldset>
 <legend>Datos del Formulario</legend>
@using (Html.BeginForm(new {@id="Form" }))
{
    <form><ul>
        <li>
        <div class="editor-label">@Html.Label("Codigo de Empleado")</div>
        <input type="text" name="codigo" />
        </li>
        <li>
        <div class="editor-label">@Html.Label("Fecha Inicio")</div>
        @(Html.Kendo().DatePicker()
            .Name("fechaInicio")
            .HtmlAttributes(new { style= "width:150px"})
                //.Name("start")
                .Min(new DateTime(1990, 1, 1))
                .Max(new DateTime(2020, 12, 31))
                //.Value(DateTime.Today)
                //.Events(e => e.Change("startChange"))

            )
        </li>
        <li>
        <div class="editor-label">@Html.Label("Fecha Fin")</div>
        @(Html.Kendo().DatePicker()
            .HtmlAttributes(new { style= "width:150px"})
                .Name("fechaFin")
                .Min(new DateTime(1990, 1, 1))
                .Max(new DateTime(2020, 12, 31))
                //.Value(DateTime.Today)
                //.Events(e => e.Change("startChange"))
            )
        </li>
    </ul>
    <div id="botones">
    <input type="button" value= "Limpiar"  id="cancel" onclick="location.href = '@(Url.Action("ReporteAsistencia", "Reportes"))'" class="button fright"/>
    <input type="submit" value="Confirmar") />
    </div>
    @if (ViewData["message"] == null)
         { }                                                                                                         
         else if (ViewData["message"].Equals("F"))
         {<script type="text/javascript"> alert("Lo sentimos!\nNo se pudo realizar la operación.\nVuelva intentarlo en otro momento. ")</script> }
</form>
}
  </fieldset>

<script type="text/javascript">
jQuery.validator.addMethod("accept2", function(value, element, param) {
  return value.match(new RegExp("^" + param + "$"));
});


$("#Form").validate({
		rules: {
            descripcion: {
                required: true,
                minlength: 5,
                maxlength: 5
                },
            },
		messages: {		
			descripcion: {
				required: "*Campo obligatorio",
                minlength: "El codigo debe tener 5 caracteres",
                maxlength: "El codigo debe tener 5 caracteres"     
			    }  
		},
        submitHandler: function ConfirmationBox(form) {
        var result = confirm("¿Está seguro de realizar los cambios?");
        if (result == true) {
            form.submit();
            return true;
        }
        else {
            return false;
            }
        }
		
});
</script>