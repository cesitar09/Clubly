@model Web.Models.LoginModel

@{
    ViewBag.Title = "Iniciar sesión";
}

<h1>@ViewBag.Title</h1>
<h2>Utilice una cuenta local para iniciar sesión.</h2>
@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    <div id="validationSummary">@Html.ValidationSummary(true)</div>

    <fieldset>
        <legend>Formulario de inicio de sesión</legend>
        <form>
        <ul>
            <li>
                @Html.LabelFor(m => m.UserName) 
                @Html.TextBoxFor(m => m.UserName)
                <div id="validacion">@Html.ValidationMessageFor(m => m.UserName)</div>
            </li><li>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password)
                <div id="validacion">@Html.ValidationMessageFor(m => m.Password)</div>
            </li><li>
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
            </li>
        </ul>
        <input type="submit" value="Iniciar sesión" class="button" />
        </form>
    </fieldset>
    <p>
        @Html.ActionLink("Register", "Register") si no tiene ninguna cuenta.    
    </p>
}

<section class="social" id="socialLoginForm">
    <h2>Usar otro servicio para iniciar sesión.</h2>
    @Html.Action("ExternalLoginsList", new { ReturnUrl = ViewBag.ReturnUrl })
</section>


